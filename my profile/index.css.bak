/*portfolio*/

h2
			{
				text-align: center;
				font-family: cursive;
			}
			.img
			{
				height: 180px;
				width:100%;
			}
			h3
			{
				padding-top: 10px;
				text-align: center;
			}
			.inner
			{
				height: 500px;
				width: 100%;
				text-align: center;
			}
			.btn
			{
				color: white;
				font-family: cursive;
			}
			.btn:hover
			{
				color: yellow;
			}
			.thumb
			{
				position: relative;
				overflow: hidden;
			}
			.caption
			{
				position: absolute;
				top: -100%;
				right: 0;
				background: rgba(0, 0, 0, 0.5);
				height: 92%;
				width: 100%;
				transition: ease-in-out 0.5s;
				color: white;
			}
			.thumb:hover .caption
			{
				top: 0%;
			}

/*Contact*/

.social-network
{
	list-style: none;
	margin-left: 500px;
	margin-top: 20px;
}
.social-network>li
{
	display: inline;
	margin: 50px;
}
.social-circle>li>a
{
	font-size: 25px;
	display: inline-block;
	height: 50px;
	width: 50px;
	border-radius: 50%;
	text-align: center;
}
.social-network li i
{
	margin-top:12px;
}
.social-network li a:hover i,.triggedhover
{
	color: white;
	transform: rotate(360deg);
	transition: ease-in-out .5s;
}
.social-circle i
{
	transition: ease-in-out .5s;
}
.icoFacebook:hover
{
	background-color:#3B5998;
}
.icoTwitter:hover
{
	background-color:#33ccff;
}
.icoinstagram:hover
{
	background: linear-gradient(to right,gold,red);
}